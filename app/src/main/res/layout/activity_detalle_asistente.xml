<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckground"
    tools:context=".DetalleAsistente">

    <TextView
        android:id="@+id/txtAMaterno"
        android:layout_width="0dp"
        android:layout_height="36dp"

        android:layout_marginTop="29dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/bck_cuadro_texto"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNomEvento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txtAPaterno" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="casual"
        android:text="Apellido materno:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtNomEvento"
        app:layout_constraintEnd_toStartOf="@+id/txtAMaterno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="casual"
        android:text="Detalle asistente"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtId"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bck_cuadro_texto"
        android:fontFamily="casual"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblId"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtNombreA"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="19dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/bck_cuadro_texto"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txtId" />

    <TextView
        android:id="@+id/txtAPaterno"
        android:layout_width="0dp"
        android:layout_height="39dp"

        android:layout_marginEnd="19dp"
        android:background="@drawable/bck_cuadro_texto"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

    <TextView
        android:id="@+id/lblId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="casual"
        android:text="ID: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtId"
        app:layout_constraintEnd_toStartOf="@+id/txtId"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="casual"
        android:text="Evento"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtNomEvento"
        app:layout_constraintEnd_toStartOf="@+id/txtNomEvento"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtNomEvento"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="12dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/bck_cuadro_texto"
        android:fontFamily="casual"
        android:text="a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminarAsistente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblAutor"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnActualizarAsistente"
        android:layout_width="0dp"
        android:layout_height="48dp"

        android:layout_marginEnd="51dp"
        android:background="@drawable/botones_estilo"
        android:fontFamily="casual"
        android:text="Actualizar"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnEliminarAsistente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEliminarAsistente" />

    <Button
        android:id="@+id/btnEliminarAsistente"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="26dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/botones_estilo"
        android:fontFamily="casual"
        android:text="Eliminar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnActualizarAsistente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomEvento" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="casual"
        android:text="Nombre:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtNombreA"
        app:layout_constraintEnd_toStartOf="@+id/txtNombreA"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="casual"
        android:text="Apellido paterno:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/txtAPaterno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreA" />


</androidx.constraintlayout.widget.ConstraintLayout>